#include<iostream>
using namespace std;
int main()
{
  int a[50],b[50],c[100],k,i,n1,n2;
  cout<<"enter the size of first array : \n";
  cin>>n1;
  cout<<"enter the elements in 1st array : \n";
  for(i=0;i<n1;i++)
  {
    cin>>a[i];
    c[i]=a[i];
  }
  k=i;
  cout<<"enter the size of second array : \n";
  cin>>n2;
  cout<<"enter the elements in 2nd array : \n";
  for(i=0;i<n2;i++)
  {
    cin>>b[i];
    c[k]=b[i];
    k++;
  }
  cout<<"merged array = ";
  for(i=0;i<k;i++)
  {
    cout<<c[i]<<" ";
  }
  cout<<endl;
  return 0;
}
